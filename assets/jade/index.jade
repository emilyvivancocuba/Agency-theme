include mixins
doctype
html(lang="en")
	head
		title Agency Theme
		meta(CHARSET="UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		
		link(rel="stylesheet", href="assets/css/bootstrap.min.css")
		link(rel="stylesheet", href="assets/font-awesome/css/font-awesome.min.css")
		link(rel="stylesheet", href="assets/css/main.css")
		link(href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300|Playfair+Display:400italic' rel='stylesheet' type='text/css')
	body
		header.header_area
			nav.navbar.navbar-default.navbar-fixed-top.nav-fut-imperfect
				.container
					.navbar-header
						button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
							span.sr-only Toggle Navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href="#") Start Bootstrap
					#navbar.navbar-collapse.collapse
						ul.nav.navbar-nav.navbar-right
							li
								a(href="#services") Services
							li
								a(href="#portfolio") Portfolio
							li
								a(href="#about") About
							li
								a(href="#team") Team
							li
								a(href="#contact") Contact
		section.hero.text-center
			.hero-text
				h3 Welcome To Our Studio!
				h1 It's nice to meet you
				a(href="#" class="botones") Tell me more
		section.main.text-center
			#services.services
				+container('Services', 'Lorem ipsum dolor sit amet, consectetur.')
					.row
						+col4
							a(href="#")
								i.fa.fa-shopping-cart
							+h4-p('E-Commerce')
						+col4
							a(href="#")
								i.fa.fa-laptop
							+h4-p('Responsive Design')
						+col4
							a(href="#")
								i.fa.fa-lock
							+h4-p('Web Security')
			#portfolio.portfolio
				+container('Portfolio', 'Lorem ipsum dolor sit amet, consectetur.')
					.row
						+col4
							a(href="#")
								img(src="img/portfolio/roundicons.png", alt="ROUND ICONS PICTURE")
								h4 Round Icons
								p Graphic Design
						+col4
							a(href="#")
								img(src="img/portfolio/startup-framework.png", alt="startup-framework PICTURE")
								h4 Startup Framework
								p Website Design
						+col4
							a(href="#")
								img(src="img/portfolio/treehouse.png", alt="TREEHOUSE PICTURE")
								h4 Startup Framework
								p Website Design
					.row
						+col4
							a(href="#")
								img(src="img/portfolio/golden.png", alt="GOLDEN PICTURE")
								h4 Golden
								p Web Site
						+col4
							a(href="#")
								img(src="img/portfolio/escape.png", alt="ESCAPE PICTURE")
								h4 Escape
								p Website Design
						+col4
							a(href="#")
								img(src="img/portfolio/dreams.png", alt="DREAMS PICTURE")
								h4 Startup Framework
								p Website Design
			#about.about
				+container('About', 'Lorem ipsum dolor sit amet, consectetur.')
					.row
						.col-xs-12.col-sm-12.col-md-12.col-lg-12
							ul.timeline
								li.timeline-text-left
									.timeline-img
										img.img-circle.img-responsive(src='img/about/1.jpg', alt='IMAGEN')
									+li-text('2009-2011', 'Our Humble Beginnings')
								li
									.timeline-img
										img.img-circle.img-responsive(src='img/about/2.jpg', alt='IMAGEN')
									+li-text('MARCH 2011', 'An Agency is Born')
								li
									.timeline-img
										img.img-circle.img-responsive(src='img/about/3.jpg', alt='IMAGEN')
									+li-text('DECEMBER 2012', 'Transition to Full Service')
								li.timeline-text-left
									.timeline-img
										img.img-circle.img-responsive(src='img/about/4.jpg', alt='IMAGEN')
									+li-text('JULY 2014', 'Phase Two Expansion')
								li.timeline-yellow
									.timeline-img
										h4 Be part of our story!
			#team.our-amazing-team
				+container('Our Amazing Team', 'Lorem ipsum dolor sit amet, consectetur.')
					.row
						+col4
							img(src="./img/team/1.jpg", alt="Kay Garland")
							h4 Kay Garland
							p Lead Designer
							include links-redes-sociales.jade
					.parrafo
						p.text-plomo Lorem ipsum dolor sit amet, consectetur adipisicing elit. Iste cumque, repellat eos velit nulla delectus voluptate, odit, mollitia aliquid maxime, reiciendis vel unde.
			.links-sponsors
				ul
					li
						a
							img(src="./img/logos/envato.jpg", alt="ENVATO")
					li
						a
							img(src="./img/logos/designmodo.jpg", alt="DESIGNMODO")
					li
						a
							img(src="./img/logos/themeforest.jpg", alt="Themeforest")
					li
						a
							img(src="./img/logos/creative-market.jpg", alt="CREATIVE MARKET")
			#contact.contact-us
				+container('Contact Us', 'Lorem ipsum dolor sit amet, consectetur.')
					.row
						.col-xs-12.col-sm-8.col-md-6.col-lg-6
							form
								input(type="text" name="name" required="required" placeholder="Your name*")
								input(type="text" name="email" required="required" placeholder="Your email*")
								input(type="text" name="phone" required="required" placeholder="Your phone*")
						.col-xs-12.col-sm-4.col-md-6.col-lg-6
							textarea(name="message" required="required" rows="8" placeholder="Your message*")
					button(type="submit" name="submit" class="btn btn-submit" value="text") Send Message
		footer
			.container
				.row
					.col-xs-12.col-sm-12.col-md-4.col-lg-4
						span Copyright &copy
							a(href="#") Your Website 2014
					.col-xs-12.col-sm-12.col-md-4.col-lg-4
						include links-redes-sociales.jade
					.col-xs-12.col-sm-12.col-md-4.col-lg-4
						ul
							li
								a(href="#") Privacy Policy
							li
								a(href="#")	Terms of Use
		script(type="text/javascript" src="assets/js/propio.js")
		script(type="text/javascript" src="assets/js/jquery.js")
		script(type="text/javascript" src="assets/js/bootstrap.min.js")